<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/album_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.framgia.soundcloud.ui.activity.MainActivity">
        <fragment
            android:id="@+id/album_list_fragment"
            android:name="com.framgia.soundcloud.ui.fragment.AlbumListFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout="@layout/fragment_album_list"/>

        <fragment
            android:id="@+id/player_fragment"
            android:name="com.framgia.soundcloud.ui.fragment.PlayerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_player"/>
</LinearLayout>

